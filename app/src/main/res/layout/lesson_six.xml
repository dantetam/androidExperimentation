<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"	
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<io.github.dantetam.lessonsix.LessonSixGLSurfaceView
		android:id="@+id/gl_surface_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
    <io.github.dantetam.lessonsix.omnimenu.CustomLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.example.android.apis"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- put first view to left. -->
        <TextView
            android:background="@drawable/noisy_grass_public_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical|center_horizontal"
            android:text="l1"/>

        <!-- stack second view to left. -->
        <TextView
            android:background="@drawable/noisy_grass_public_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical|center_horizontal"
            android:text="l2"/>

        <!-- also put a view on the right. -->
        <TextView
            android:background="@drawable/noisy_grass_public_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical|center_horizontal"
            android:text="r1"/>

        <!-- by default views go in the middle; use fill vertical gravity -->
        <TextView
            android:background="@drawable/noisy_grass_public_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical|center_horizontal"
            android:text="fill-vert"/>

        <!-- by default views go in the middle; use fill horizontal gravity -->
        <TextView
            android:background="@drawable/noisy_grass_public_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|fill_horizontal"
            android:text="fill-horiz"/>

        <!-- by default views go in the middle; use top-left gravity -->
        <TextView
            android:background="@drawable/noisy_grass_public_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:text="top-left"/>

        <!-- by default views go in the middle; use center gravity -->
        <TextView
            android:background="@drawable/noisy_grass_public_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="center"/>

        <!-- by default views go in the middle; use bottom-right -->
        <TextView
            android:background="@drawable/noisy_grass_public_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="bottom-right"/>

    </io.github.dantetam.lessonsix.omnimenu.CustomLayout>
	<LinearLayout		
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:orientation="vertical">
        <TextView
            android:id="@+id/image_textview_test0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:id="@+id/image_textview_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:id="@+id/image_textview_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:id="@+id/image_textview_test3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:id="@+id/image_textview_test4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
		<Button
			android:id="@+id/button_set_min_filter"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"					
			android:text="@string/lesson_six_set_min_filter" />
		<Button
			android:id="@+id/button_set_mag_filter"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"					
			android:text="@string/lesson_six_set_mag_filter" />	
	</LinearLayout>

</FrameLayout>
